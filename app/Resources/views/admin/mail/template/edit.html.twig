{% extends 'layout.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/app/markdown-editor/editor.css') }}" />
{% endblock %}

{% block breadcrumps %}
    <a href="{{ path('homepage') }}"><i class="material-icons">home</i></a> <i class="material-icons">chevron_right</i>
    <a href="{{ path('admin') }}"><i class="material-icons">tune</i>admin</a> <i class="material-icons">chevron_right</i>
    <a href="{{ path('email_template_list') }}"><i class="material-icons">list</i>modèles d'emails</a> <i class="material-icons">chevron_right</i>
    <i class="material-icons">edit</i>
{% endblock %}

{% block content %}
    <h4 class="">Modifier le modèle d'email</h4>

    <p>La balise <strong>{{ "{{template_content}}"}}</strong> dans le modèle sera remplacée par le contenu du mail.</p>

    {{ form_start(form) }}
    <div class="errors">
        {{ form_errors(form.content) }}
    </div>
    {{ form_widget(form.content) }}
    <div>
        <button type="submit" class="btn-large waves-effect waves-light">Enregistrer</button>
    </div>
    {{ form_end(form) }}

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/app/markdown-editor/editor.js') }}"></script>
    <script src="{{ asset('bundles/app/markdown-editor/marked.js') }}"></script>
    <script>
        new Editor({
            element: document.getElementById('appbundle_email_template_content'),
        })
    </script>
{% endblock %}