{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Liste des utilisateurs admin ({{ admins | length }})</h1>

    <table class="striped">
        <thead>
            <tr>
                <th data-col="o.member_number">#</th>
                <th data-col="o.username">username</th>
                <th data-col="b.email">email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for admin in admins %}
            <tr>
                <td>{{ - admin.membernumber }}</td>
                <td>{{ admin.username }}</td>
                <td>{{ admin.email }}</td>
                <td>
                    <a href="{{ path('user_edit', { 'username': admin.username }) }}" class="btn waves-effect waves-light">editer</a>
                    {{ form_start(delete_forms[admin.id]) }}
                    {{ form_widget(delete_forms[admin.id]) }}
                    <button type="submit" class="btn waves-effect waves-light red">Supprimer</button>
                    {{ form_end(delete_forms[admin.id]) }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}

