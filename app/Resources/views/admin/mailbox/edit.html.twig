{% extends 'layout.html.twig' %}

{% block breadcrumps %}
    <a href="{{ path('homepage') }}"><i class="material-icons">home</i></a> <i class="material-icons">chevron_right</i>
    <a href="{{ path('admin') }}"><i class="material-icons">tune</i>admin</a> <i class="material-icons">chevron_right</i>
    <a href="{{ path('mailbox_list') }}"><i class="material-icons">list</i>boîtes mail</a> <i class="material-icons">chevron_right</i>
    <i class="material-icons">edit</i>edit
{% endblock %}

{% block content %}
    <h4 class="">Editer la boîte mail</h4>

    {{ form_start(form) }}
    <div class="row">
        <div class="col s6">
            {{ form_label(form.fromName) }}
            {{ form_widget(form.fromName) }}
        </div>
        <div class="col s6">
            {{ form_label(form.address) }}
            {{ form_widget(form.address) }}
        </div>
    </div>
    <div>
        <button type="submit" class="btn waves-effect waves-light">Enregistrer</button>
    </div>
    {{ form_widget(form) }}
    {{ form_end(form) }}

    {% if is_granted("ROLE_SUPER_ADMIN") %}
        {{ form_start(delete_form) }}
        {{ form_widget(delete_form) }}
        <div>
            <button type="submit" class="btn waves-effect waves-light red">Supprimer</button>
        </div>
        {{ form_end(delete_form) }}
    {% endif %}

{% endblock %}
