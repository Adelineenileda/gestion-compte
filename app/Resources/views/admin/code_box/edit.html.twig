        <button type="submit" class="btn waves-effect waves-light"><i class="material-icons left">save</i>Enregistrer</button>
    </div>
    {{ form_end(form) }}

    {% if is_granted('ROLE_SUPER_ADMIN') %}

        <div>
            <a class="btn waves-effect waves-light red" href="{{ path('code_box_delete', {"id": codeBox.id}) }}"><i class="material-icons left">delete</i>Supprimer</a>
        </div>
    {% endif %}

