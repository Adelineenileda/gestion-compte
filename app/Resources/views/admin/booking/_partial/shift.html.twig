{% set nbBookableShifts = bucket.bookableShiftsCount() %}
{% set nbShifts = (bucket.shifts() | length) %}
<div
        data-offset="{{ (((bucket.start|date('G')-start)*60 + bucket.start|date('i'))/60) }}"
        data-length="{{ (100/(end-start+1)) }}"
        style="padding: 0 1px;width:{{ (bucket.duration / 60) * (100/(end-start+1)) }}%;position: absolute;
                left:{{ (((bucket.start|date('G')-start)*60 + bucket.start|date('i'))/60)*(100/(end-start+1)) }}%;
                top: {{ line*10 }}px;">
    <a href="#edit{{ bucket.first.id }}"
       class="modal-trigger tooltipped" data-position="top" data-delay="100" data-tooltip="{{ bucket.first.job.name }}">
        <div class="z-depth-1 {{ bucket.first.job.color }} {% if nbBookableShifts > 1 %}lighten-{{ min(4, nbBookableShifts - 1) }} {% endif %}{% if nbBookableShifts > 2 %}black-text {% else %}white-text {% endif %}"
             style="position: relative;height: 60px;">
            <div style="height:2px; width: 100%;position: absolute;">
                {% for shifter in 1..nbBookableShifts %}
                    {% if loop.index <= nbBookableShifts %}
                        <div class="green lighten-3 left"
                             style="height:100%; width: {{ 100/(nbShifts) }}%"></div>
                    {% else %}
                        <div class="grey lighten-3 left"
                             style="height:100%; width: {{ 100/(nbShifts) }}%"></div>
                    {% endif %}
                {% endfor %}
            </div>
            <div style="font-size: 11px;padding:3px;width: 100%;" class="row" >
                <div class="col s3" style="position: relative;height: 60px;">
                    <span style="position: absolute;width:60px;height: 60px;top: 0;left: 12px;transform: rotate(-90deg);text-align: center;font-size: 9px;">{{ bucket.start|date('G\\hi') }}&nbsp;{{ bucket.end|date('G\\hi') }}</span>
                </div>
                <div class="col s9" style="font-size: 9px;">
                    <ul>
                        {% for shift in bucket.shifts() %}
                            {% if shift.shifter %}{# is booked #}
                            <li>{% if shift.role %}<b data-role="{{ shift.role.name }}">{% endif %}{{ shift.shifter.firstname|lower|capitalize }}&nbsp;{{ shift.shifter.lastname|first|upper }}{% if shift.role %}</b>{% endif %}</li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </a>
</div>

<div id="edit{{ bucket.first.id }}" class="modal">
        <div class="modal-content">
            <h4>Créneaux / <span class="{{ bucket.first.job.color }}-text">{{ bucket.first.job.name }}</span></h4>
            <h5>{{ bucket.start|date_fr_long }} de {{ bucket.start|date('G\\hi') }} à {{ bucket.end|date('G\\hi') }}</h5>
            remplissage {{ nbShifts-nbBookableShifts }}/{{ nbShifts }} ({{ ((nbShifts-nbBookableShifts) / nbShifts)*100 }}%)
            <ul>
                {% for shift in bucket.shifts() %}
                    {% if shift.shifter %}{# is booked #}
                        <li>
                            {% if shift.role %}<b data-role="{{ shift.role.name }}">{% endif %}
                                <a href="{{ path("user_show",{'username':shift.shifter.user.username}) }}">#{{ shift.shifter.user.memberNumber }}</a> {{ shift.shifter.firstname }} {{ shift.shifter.lastname }}
                            {% if shift.role %}</b> ({{ shift.role.name }}){% endif %}
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>

        </div>
        <div class="modal-footer">
            {{ form_start(delete_bucket_forms[ bucket.first.id ]) }}
            {{ form_widget(delete_bucket_forms[ bucket.first.id ]) }}
            <a href="#" onclick="$(this).closest('form').submit()" class="red-text"><i class="material-icons">delete</i>Supprimmer tous les créneaux à cette heure et ce poste</a>
            {{ form_end(delete_bucket_forms[ bucket.first.id ]) }}
        </div>
    </form>
</div>