<style>
    .qr img{
        width: 25mm;
    }
    .bc img{
        width: 35mm;
        margin-left: 5mm;
    }
    .bc{
        text-align: right;
    }
    table,thead,tbody,tfoot,tr,th,td {
        margin: 0;
        padding: 0;
        border: none;
        border-width: 0;
        border-collapse: inherit;
        border-spacing: 0;
        border-color: inherit;
        -webkit-border-horizontal-spacing: 0;
        -webkit-border-vertical-spacing: 0;
    }
    td.info{
        text-align: center;
    }
</style>
{% set bindex = 0   %}
<page backtop="2mm" backright="0mm" backbottom="0mm" backleft="0mm">
    <table style="width: 210mm;">
        <tbody style="width: 100%">
        <tr style="width: 100%">
            {% for user in users %}
                {% for beneficiary in user.beneficiaries %}
                    {% set card = beneficiary.EnabledSwipeCards.first   %}
                    {% set code = card.code   %}
                    <td style="width: 70mm;height: 36mm; overflow: hidden;">
                        <table style="width: 100%">
                            <tbody style="width: 100%">
                            <tr style="width: 100%">
                                <td class="qr">{{ absolute_url(path("swipe_in",{"code":code})) | qr | raw }}</td>
                                <td class="bc" >{{ code | barcode | raw }}
                                    <br>
                                    Adh√©sion <strong>#{{ card.beneficiary.user.memberNumber }}</strong> [B{{ card.number }}]
                                    <br>
                                    <strong>{{ project_url_display }}</strong>
                                </td>
                            </tr>
                            <tr style="height: 6mm;width: 100%">
                                <td colspan="2" class="info">
                                    <span>{{ card.beneficiary.firstname | capitalize }} {{ card.beneficiary.lastname | upper }}</span>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </td>
            {% set bindex = bindex + 1   %}
            {% if bindex is divisible by(3) %}
        </tr><tr>
            {% endif %}
            {% if bindex is divisible by(24) %}
        </tr>
        </tbody>
    </table>
</page>
