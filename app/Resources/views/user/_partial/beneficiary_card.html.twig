<div class="col s12 m6 l6 xl4">
    <div class="card {% if beneficiary.isMain %}blue-grey darken-1{% else %}blue-grey lighten-1{% endif %}">
        <div class="card-content white-text">
            <span class="card-title">{{ beneficiary.firstname | lower | capitalize }} {{ beneficiary.lastname | upper}}
                {% if beneficiary.isMain %}<i class="material-icons">flag</i>{% endif %}
                {% if beneficiary.isAmbassador %}<i class="material-icons">face</i>{% endif %}</span>
            <div class="row">
                <div class="col s4">{{ beneficiary.phone }}</div>
                <div class="col s8">{{ beneficiary.email }}</div>
            </div>
        </div>
        {% if not beneficiary.isMain %}
            <div class="card-action">
                <table>
                    <tr>
                        <td>
                            <form action="{{ path('user_edit_beneficiary_edit',{'id':beneficiary.id}) }}" method="get">
                            {% if not is_granted("ROLE_ADMIN") %}
                                <input type="hidden" value="{{ token }}" name="token">
                            {% endif %}
                            <button type="submit" class="btn">Editer</button>
                            </form>
                        </td>
                        {% if delete_form is defined %}
                            <td>
                                {{ form_start(delete_form) }}
                                <button type="submit" href="{{ path('user_edit_beneficiary_delete',{'id':beneficiary.id}) }}" class="btn red">Supprimer</button>
                                {{ form_end(delete_form) }}
                            </td>
                        {% endif %}
                    </tr>
                </table>
            </div>
        {% endif %}
    </div>
</div>