<div class="col s12 m6 l6 xl4">
    <div class="card {% if beneficiary.isMain %}blue-grey darken-1{% else %}blue-grey lighten-1{% endif %}">
        <div class="card-content white-text">
            <span class="card-title">{{ beneficiary.firstname | lower | capitalize }} {{ beneficiary.lastname | upper}}
                {% if beneficiary.isMain %}<i class="material-icons">flag</i>{% endif %}
                {% if beneficiary.isAmbassador %}<i class="material-icons">face</i>{% endif %}</span>
            <div class="row">
                <div class="col s12 truncate"><i class="material-icons tiny">phone</i>{{ beneficiary.phone }}</div>
                <div class="col s12 truncate"><i class="material-icons tiny">mail</i>{{ beneficiary.email }}</div>
                {% if beneficiary.roles | length %}
                <div class="col s12 truncate"><i class="material-icons tiny">assignment_ind</i>{% for role in beneficiary.roles %}<div class="chip">{{ role.name }}</div>{% endfor %}</div>
                {% endif %}
                {% if beneficiary.commissions | length %}
                <div class="col s12 truncate"><i class="material-icons tiny">group</i>{% for commission in beneficiary.commissions %}<div class="chip">{{ commission.name }}</div>{% endfor %}</div>
                {% endif %}
            </div>
            {% if not beneficiary.isMain %}
                    <form action="{{ path('user_edit_beneficiary_edit',{'id':beneficiary.id}) }}" method="get" class="left">
                        {% if not is_granted("ROLE_ADMIN") %}
                            <input type="hidden" value="{{ token }}" name="token">
                        {% endif %}
                        <button type="submit" class="btn btn-floating waves-effect waves-light"><i class="material-icons">mode_edit</i></button>
                    </form>
                    {% if delete_form is defined %}
                        {{ form_start(delete_form) }}
                        <button type="submit" href="{{ path('user_edit_beneficiary_delete',{'id':beneficiary.id}) }}" class="btn btn-floating waves-effect waves-light red"><i class="material-icons">remove</i></button>
                        {{ form_end(delete_form) }}
                    {% endif %}
            {% endif %}
        </div>
    </div>
</div>