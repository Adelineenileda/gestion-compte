<div class="beneficiary row">
    <div class="input-field firstname col s6">
        <div class="errors">
            {{ form_errors(form.firstname) }}
        </div>
        <div class="input-field">
            {{ form_widget(form.firstname) }}
            {{ form_label(form.firstname) }}
        </div>
    </div>
    <div class="input-field laststname col s6">
        <div class="errors">
            {{ form_errors(form.lastname) }}
        </div>
        <div class="input-field">
            {{ form_widget(form.lastname) }}
            {{ form_label(form.lastname) }}
        </div>
    </div>
    <div class="input-field email col s6">
        <div class="errors">
            {{ form_errors(form.email) }}
        </div>
        <div class="input-field">
            {{ form_widget(form.email) }}
            {{ form_label(form.email) }}
        </div>
    </div>
    <div class="input-field phone col s6">
        <div class="errors">
            {{ form_errors(form.phone) }}
        </div>
        <div class="input-field">
            {{ form_widget(form.phone) }}
            {{ form_label(form.phone) }}
        </div>
    </div>
    <div class="checkboxes col s6">
        {% if form.children.roles is defined %}
            {{ form_widget(form.roles) }}
            {{ form_label(form.roles) }}
        {% endif %}
    </div>
    <div class="checkboxes col s6">
        {% if form.children.commissions is defined %}
            {{ form_widget(form.commissions) }}
            {{ form_label(form.commissions) }}
        {% endif %}
    </div>
</div>