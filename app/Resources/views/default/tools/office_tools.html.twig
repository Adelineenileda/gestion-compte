{% extends 'layout.html.twig' %}

{% block breadcrumps %}
    <a href="{{ path('homepage') }}"><i class="material-icons">home</i></a> <i class="material-icons">chevron_right</i>
    <i class="material-icons">build</i><span>Outils adhésion et ré-adhésion</span>
{% endblock %}

{% block content %}
    {% if is_granted("access_tools",app.user)  %}
        <div class="center">
            <a href="{{ path('user_new') }}" class="waves-effect waves-light green btn"><i class="material-icons left">person_add</i>Nouvelle adhésion</a>
            <a href="{{ path('find_user_number') }}" class="waves-effect waves-light orange btn"><i class="material-icons left">search</i>Trouver un numéro d'adhérent</a>
            <a href="{{ path('user_edit_firewall') }}" class="waves-effect waves-light btn"><i class="material-icons left">edit</i>Editer un adhérent</a>
        </div>
    {% endif %}
    {% if is_granted("view",app.user)  %}
    <div class="center">
        <a href="{{ path('ambassador_phone_list') }}" class="waves-effect waves-light teal btn"><i class="material-icons left">phone</i>Appeler pour réadhésions</a>
    </div>
    {% endif %}
    {% if is_granted("access_tools",app.user)  %}
        <div class="center">
            <a href="#post-it_new" class="waves-effect waves-light yellow black-text btn modal-trigger"><i class="material-icons left">add</i>Post-it</a>
            <div id="post-it_new" class="modal">
                {{ form_start(postit_form) }}
                    <div class="modal-content">
                        <h4>Nouveau post-it</h4>
                        {{ form_widget(postit_form) }}
                    </div>
                    <div class="modal-footer">
                        <a href="#!"
                           class="modal-action modal-close waves-effect waves-green btn-flat red-text ">Annuler</a>
                        <button class="modal-action modal-close waves-effect waves-green btn teal ">Valider</button>
                    </div>
                {{ form_end(postit_form) }}
            </div>
        </div>
    {% endif %}
{% endblock %}
