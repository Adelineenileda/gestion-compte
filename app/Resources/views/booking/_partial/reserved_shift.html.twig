<div class="card cyan lighten-5">
    <div class="card-content">
        <span class="card-title">{{ shift.start|date_fr_long }}</span>
        <p>De {{ shift.start|date('H:i') }} à {{ shift.end|date('H:i') }}<br>
            <i class="material-icons">person</i>{{ shift.lastShifter.firstname }} / <b
                    class="{{ shift.job.color }}-text">{{ shift.job.name }}</b></p>
    </div>
    <div class="card-action">
        <a href="#accept{{ shift.id }}" class="modal-trigger">J'accepte</a>
        <a href="#reject{{ shift.id }}" class="modal-trigger">Je refuse</a>
    </div>
    <div id="accept{{ shift.id }}" class="modal">
        <div class="modal-content">
            <h4>Confirmation</h4>
        </div>
        <div class="modal-footer">
            <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat red-text">Retour</a>
            <a href="#"
               class="modal-action modal-close waves-effect waves-green btn teal"
               onclick="$('#form_accept_shift_id').val({{ shift.id }});$('#accept_reserved_shift').submit();">Oui, je reprends mon créneau</a>
        </div>
    </div>
    <div id="reject{{ shift.id }}" class="modal">
        <div class="modal-content">
            <h4>Confirmation</h4>
        </div>
        <div class="modal-footer">
            <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat red-text">Retour</a>
            <a href="#"
               class="modal-action modal-close waves-effect waves-green btn teal"
               onclick="$('#form_reject_shift_id').val({{ shift.id }});$('#reject_reserved_shift').submit();">Confirmer</a>
        </div>
    </div>

    {{ form_start(accept_reserved_shift_form,{ 'attr' : { 'id' : 'accept_reserved_shift'}}) }}
    {{ form_widget(accept_reserved_shift_form) }}
    {{ form_end(accept_reserved_shift_form) }}

    {{ form_start(reject_reserved_shift_form,{ 'attr' : { 'id' : 'reject_reserved_shift'}}) }}
    {{ form_widget(reject_reserved_shift_form) }}
    {{ form_end(reject_reserved_shift_form) }}

</div>
